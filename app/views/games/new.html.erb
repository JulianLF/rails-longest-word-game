<h1>new</h1>
<ul class="newgame">
  <% @letters.each do |letter| %>
    <li class="letter"><strong><%= letter %></strong></li>
  <% end %>
</ul>
<br>
<p>What is the longest word you can find ?</p>
<br>
<form action="/score">
  <input type="text" name="word" id="word">
  <input type="hidden" name="letters" id="letters" value=<%= @letters.join('') %> >
  <input type="submit" value="Play">
</form>
